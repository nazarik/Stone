#content
  .ic
  .container
    .row
      %article.span12
        %h3= @category.name
      .clear
      %ul.portfolio.clearfix
        - @products.each do |product|
          %li.box
            .wrapper
              = link_to image_tag(product.image.url(:medium)), product.image.url, class: 'magnifier', rel: 'tooltip', title: product.title
              - if product.title.present?
                %section
                  %p= product.title
