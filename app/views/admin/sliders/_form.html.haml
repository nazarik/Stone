= simple_form_for [:admin, @slider], html: { class: 'form-horizontal' } do |f|
  %fieldset
    %legend= "#{controller.action_name.capitalize} Slider"

    = f.input :image, as: :file

    .form-actions
      = f.submit nil, class: 'btn btn-primary'
      = link_to 'Cancel', admin_sliders_path, class: 'btn'
