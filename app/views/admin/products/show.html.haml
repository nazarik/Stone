%h1 Product

%p
  %b Title
  %br
  = @product.title

%p
  %b Category
  %br
  = @product.category.name

%p
  %b Description
  %br
  = @product.description

- if @product.image.exists?
  %p
    %b Image
    %br
  = image_tag @product.image.url

.form-actions
  = link_to 'Back', admin_products_path, class: 'btn'
  = link_to 'Edit', edit_admin_product_path(@product), class: 'btn'
  = link_to 'Delete', admin_product_path(@product), method: 'delete', confirm: 'Are you sure?', class: 'btn btn-danger'
