%h1 Feedback

%p
  %b Name
  %br
  = @feedback.name

%p
  %b Email
  %br
  = @feedback.email

%p
  %b Message
  %br
  = @feedback.message

.form-actions
  = link_to 'Back', admin_feedbacks_path, class: 'btn'
  = link_to 'Delete', admin_feedback_path(@feedback), method: 'delete', confirm: 'Are you sure?', class: 'btn btn-danger'
