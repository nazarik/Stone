!!!
%html{lang: I18n.locale}
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Rock"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = yield :head
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    %meta{content: "Your description", name: "description"}
    %meta{content: "Your keywords", name: "keywords"}
    %meta{content: "Your name", name: "author"}
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:400,300", rel: "stylesheet", type: "text/css"}
    /[if lt IE 8]
      <div style='text-align:center'><a href="http://www.microsoft.com/windows/internet-explorer/default.aspx?ocid=ie6_countdown_bannercode"><img src="http://www.theie6countdown.com/assets/upgrade.jpg"border="0"alt=""/></a></div>
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <link rel="stylesheet" href="ie.css" type="text/css" media="screen">
      <link href='http://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
      <link href='http://fonts.googleapis.com/css?family=Open+Sans:400' rel='stylesheet' type='text/css'>

  %body
    .spinner
    %header
      .container.clearfix
        .row
          .span12
            .navbar.navbar_
              .container
                %h1.brand.brand_
                  = link_to image_tag('logo.gif'), root_path
                %a.btn.btn-navbar.btn-navbar_{"data-target" => ".nav-collapse_", "data-toggle" => "collapse"}
                  Menu
                  %span.icon-bar
                = render 'shared/navigation'
    .bg-content
      = yield
    %footer
      .container.clearfix
        %ul.list-social.pull-right
          %li
            %a.icon-1{href: "#"}
          %li
            %a.icon-2{href: "#"}
          %li
            %a.icon-3{href: "https://twitter.com/oswt"}
          %li
            %a.icon-4{href: "#"}
        .privacy.pull-left
          Website Template designed by
          %a{href: "http://store.templatemonster.com?aff=awdawd", rel: "nofollow", target: "_blank"} TemplateMonster.com
          = succeed "Popular" do
            %br/
          %a{href: "http://www.oswt.co.uk", target: "_blank"} at www.Oswt.co.uk
